<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ATM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="body-content">
        <div class="center">
            <h1>Virtual Automated Teller Machine</h1>
        </div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="jumbotron">
                    <div class="center">
                        <div class="container">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>       
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tiffany Jansen ~ Virtual Automated Teller Machine</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
