@model ATMProject.Models.User

@{
    ViewBag.Title = "Deposit";
}

<br /><br />

<div class="container-fluid">
    <div class="center">
        <h2>Make a Deposit</h2>
        <div id="error"><h3 style="color:red;">@ViewBag.Error</h3></div>
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="container-fluid">
                <div class="center">
                    <h2>Select the account</h2>
                    <select name="account" style="width: 200px;">
                        <option value="check">Checking ($@string.Format("{0:C}", Html.DisplayFor(model => model.CheckingAmount)))</option>
                        <option value="save">Savings ($@string.Format("{0:C}", Html.DisplayFor(model => model.SavingsAmount)))</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="container-fluid">
                <div class="center">
                    <h2>Amount to Deposit</h2>
                    <input name="amount" type="number" max="100000000000000" min="0.01" step="0.01" style="width: 200px;" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-fluid">
            <div class="center">
                <button type="submit">Submit</button>
                <button type="button" onclick="location.href='@Url.Action("Account", "Home", new { pin = Model.PIN})'">Go Back</button>
            </div>
        </div>
    </div>
    @Html.Hidden(Model.PIN)
</form>