@model IEnumerable<CampusApartments.Models.Request>

@{
    ViewBag.Title = "Maintenance Requests Made";
    ViewBag.MainF = "active";
}

<div class="center">
    <h2>@ViewBag.Title</h2>
</div>

<table>
        <thead>
            <tr align="center">
                <th>
                    @Html.DisplayNameFor(model => model.TimeOfRequest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApartmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitNumber)
                </th>
                <th align="center">
                    @Html.DisplayNameFor(model => model.MaintenanceRequired)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Permission)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr align="center">
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeOfRequest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaintenanceRequired)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Permission)
                    </td>
                </tr>
            }
        </tbody>
</table>
