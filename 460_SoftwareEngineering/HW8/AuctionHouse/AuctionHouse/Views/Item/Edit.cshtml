@model AuctionHouse.Models.Item

@{
    ViewBag.Title = "Edit";
}

<div class="center">
    <h2 style="font-family: Georgia, serif;">
        Edit @Html.DisplayFor(model => model.Name)
    </h2>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <!--The form group for the Name-->
        <div class="form-group">
            <div class="col-md-offset-3 col-md-2">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label;", @style = "font-family: Georgia, serif; font-size: 20px;" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <!--The form group for the Description-->
        <div class="form-group">
            <div class="col-md-offset-3 col-md-2">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label;", @style = "font-family: Georgia, serif; font-size: 20px;" })
            </div>
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @rows = 2 })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <!--The form group for the Seller-->
        <div class="form-group">
            <div class="col-md-offset-3 col-md-2">
                @Html.LabelFor(model => model.Seller, "Seller", htmlAttributes: new { @class = "control-label;", @style = "font-family: Georgia, serif; font-size: 20px;" })
            </div>
            <div class="col-md-6">
                @Html.DropDownList("Seller", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Seller)
            </div>
        </div>

        <!--The form group for the Submit Button-->
        <div class="form-group">
            <div class="col-md-12">
                <div class="center">
                    <input type="submit" value="Submit Edit" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

