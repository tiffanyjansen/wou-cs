@model  readygotravel.Models.Person
@using Microsoft.AspNet.Identity;
@using readygotravel.Models;
@using Microsoft.AspNet.Identity.EntityFramework;
@{
    ViewBag.Title = "Top European Locations";
}


<div class="image-bar3">
    <div class="content">
        @if (Request.IsAuthenticated)
        {
            int position = @User.Identity.GetUserName().IndexOf("@");
            <h2>Welcome @Html.DisplayFor(model => model.FirstName)! </h2>

        }
        else
        {
            <h2>Welcome Guest!</h2>
        }
        <div class="d-flex justify-content-center">
            <div class="row">
                <h4>We may be able to help you pick your next Dream Destination!</h4>
            </div>
        </div>
