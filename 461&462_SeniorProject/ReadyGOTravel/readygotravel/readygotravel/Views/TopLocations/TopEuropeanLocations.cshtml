        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm">
                @if (Request.IsAuthenticated)
                {
                    var user = User.Identity;
                    ApplicationDbContext context = new ApplicationDbContext();
                    var UserManager = new UserManager<ApplicationUser>
                        (new UserStore<ApplicationUser>
                           (context));
                    var roles = UserManager.GetRoles(user.GetUserId());
                    if (!(roles.Count == 0))
                    {
                        if (roles[0].ToString() == "Admin")
                        {
                            <br />
                            <br />
                            <input class="btn btn-default mx-auto d-block" type="button" value="Show Top Searched Locations" onclick="location.href='@Url.Action("Display", "TopLocations")'" />
