@model readygotravel.Models.UserState

@{
    ViewBag.Title = "Delete Favorite";
}
<div class="content">
    <h2>Delete Favorite</h2>

    <h3>Are you sure you want to delete this favorite?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Country Name:
            </dt>

            <dd>
                    @Html.DisplayFor(model => model.Location.Country.CountryName)


            </dd>

            @*This text will vary if the contry is the US or not.*@
                <dt>Location Name:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Location.Name)
                </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">

            <input type="submit" value="Yes" class="btn btn-default" />
            @Html.ActionLink("No", "Index", null, new { @class = "btn navbar-btn" })
        </div>
        }
    </div>
</div>